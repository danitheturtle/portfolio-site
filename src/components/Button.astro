---
export interface Props {
  variant?: 'primary' | 'secondary' | 'text';
  size?: 'sm' | 'md' | 'lg';
  density?: 'compact' | 'normal' | 'comfortable';
  class?: string;
  as?: string;
}
const {
  as: Component = 'button',
  variant = 'secondary',
  size = 'md',
  density = 'normal',
  class: className,
  ...rest
} = Astro.props;
---

<Component
  class:list={[
    'btn',
    {
      'btn-primary': variant === 'primary',
      'btn-text': variant === 'text',
      'btn-sm': size === 'sm',
      'btn-lg': size === 'lg',
      'btn-compact': density === 'compact',
      'btn-comfortable': density === 'comfortable',
    },
    className,
  ]}
  {...rest}
>
  <slot />
</Component>
